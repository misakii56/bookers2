<div><%= flash[:hoge] %></div>
<div class="container">
   <div class="row">
     <div class="col-md-3" style="background-color: white;">
       <%= render 'books/book' %>



 <% if @user.profile_image.attached? %>
    <%= image_tag @user.profile_image, size: "200x200" %>
  <% else %>
    <%= image_tag 'default-image.jpeg', size: "200x200" %>
  <% end %>
      <ul>
        <%= link_to edit_user_path(@user.id) do %>
        <i class= "fas fa-user-cog" style="color: black;"></i>
        <% end %>
      </ul>
<h4>name</h4>
<p><%= @user.name %></p>
<h4>introduction</h4>
<p><%= @user.introduction %></p>

  <h2>New book</h2>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
</div>

  <div class="col-md-8 offset-md-1" style="background-color: white;">
    <table class="table table-striped">
      <h3>Books</h3>
      <thead>
        <tr>
          <th> </th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
            <%= link_to user_path(book.user.id) do %>
            <% if book.user.profile_image.attached? %>
            <%= image_tag book.user.profile_image, size: "100x100" %>
            <% else %>
            <%= image_tag 'default-image.jpeg', size: "100x100" %>
            <% end %>
            <% end %>
            </td>
            <td><%= link_to book.title, "/books/#{book.id}" %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
